<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReactionsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReactionsApp"
    Shell.FlyoutBehavior="Flyout"
    Title="ReactionsApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        IsVisible="True"
        />

    <Shell.FlyoutHeader>
        <StackLayout Padding="20">
            <Border WidthRequest="100" HeightRequest="100" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50, 50, 50, 50" />
                </Border.StrokeShape>
                <Image Source="dotnet_bot.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
            </Border>
            <Label Text="User" FontSize="24" HorizontalOptions="Center" />
            <Label Text="user@example.com" HorizontalOptions="Center" />
            <Button Text="Logout" />
        </StackLayout>
    </Shell.FlyoutHeader>
</Shell>

    