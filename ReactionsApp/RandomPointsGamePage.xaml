<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:ReactionsApp"
             x:Class="ReactionsApp.RandomPointsGamePage"
             Title="RandomPointsGamePage">

    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" x:Name="GameField">
        <Label
            x:Name="ScoreLabel"
            Text="Score:"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" 
            AbsoluteLayout.LayoutBounds="0.1, 0, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            />
        <Button
            x:Name="ResetGameButton"
            Text="Reset" 
            SemanticProperties.Hint="Click to start the lights game"
            Clicked="OnResetGameButtonClicked"
            AbsoluteLayout.LayoutBounds="0.5, 0, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label
            x:Name="RemainingSecondsLabel"
            Text=""
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            AbsoluteLayout.LayoutBounds="0.9, 0, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            />
        
    </AbsoluteLayout>

</ContentPage>